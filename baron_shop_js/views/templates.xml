<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>


<template id="assets_frontend" inherit_id="website_sale.assets_frontend" name="Shop">
    <xpath expr="script[@src='/website_sale/static/src/js/website_sale.js']" position="replace">
        <script type="text/javascript" src="/baron_shop_js/static/src/js/website_sale.js"></script>
    </xpath>
</template>

<template id="product_price" inherit_id="website_sale.product_price" >

    <xpath expr="//b[@class='oe_price']" position="before">
        <t t-set="attribute_value_ids_price" t-value="get_attribute_value_ids(product)"/>
        <t t-set="have_qty" t-value="website.env['baron_website_tools'].product_have_quantity(product)"/>
        <p t-if="len(attribute_value_ids_price) &gt; 1" class="text-muted" style="font-size: 20pt; font-weight:700; line-height:30px;padding:10px 0">
            Стоимость: <span class="price_per_one"/> руб. за <span t-field="product.uom_id"/>,<br/>
            <t t-if="have_qty">Количество:
                <t t-set="uos_vals" t-value="website.env['baron_website_tools'].product_get_quantity(product)"/>
                <span id='uos_val' t-esc="uos_vals['qty']" hidden="1"/>
                <span id='uos_name' t-esc="uos_vals['uos_name']" hidden="1"/>
                <span id='uos_cof' t-esc="uos_vals['cof']" hidden="1"/>
                <span id='website_styles' t-esc="uos_vals['styles']" hidden="1"/>
                <span class="price_per_one_qty"/>
                <!--<span t-field="product.uom_id"/>-->
            </t>
        </p>
        <p t-if="len(attribute_value_ids_price) &lt;= 1" class="text-muted" style="font-size: 14pt; color: #5b90f1; font-family: proxima;">
            Стоимость: <span t-field="product.price"/> руб. за <span t-field="product.uom_id"/>,<br/>
               <t t-if="have_qty">Количество: 1<span t-field="product.uom_id"/></t>
        </p>
        <span style="font-size: 30px;" class="total_price_caption" id="total_price_caption" name="total_price_caption">Всего:</span>
    </xpath>
</template>

